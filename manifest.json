{
  "manifest_version": 3,
  "name": "Gerrit → Jira Comment",
  "version": "1.0.0",
  "description": "Gerrit change 페이지에서 툴바 버튼 한 번으로 Jira 이슈에 코멘트를 추가합니다.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://gerrit.thinkfree.com/*",
    "https://gerrit.thinkfree.com/*",
    "https://thinkfree.atlassian.net/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Gerrit → Jira Comment"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://gerrit.thinkfree.com/*",
        "https://gerrit.thinkfree.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
